# Server Configuration
NODE_ENV=development
PORT=3001

# CORS Configuration (using standard cors library patterns)
# Options: 'true'/'*' (allow all), 'false' (disable), single URL, or comma-separated list
# Examples:
# CORS_ORIGIN=true              # Allow all origins (development)
# CORS_ORIGIN=false             # Disable CORS
# CORS_ORIGIN=http://localhost:5173
# CORS_ORIGIN=http://localhost:5173,http://localhost:5174,https://yourdomain.com
CORS_ORIGIN=http://localhost:5173,http://localhost:5174

# Legacy Frontend URL (deprecated, use CORS_ORIGIN instead)
FRONTEND_URL=http://localhost:5174

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/subscription_tracker

# Redis Configuration (for BullMQ)
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Logging Configuration
LOG_LEVEL=debug

# API Configuration
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100

# Email Service (Resend)
RESEND_API_KEY=re_your_api_key_here
