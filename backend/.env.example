# Logging Configuration
LOG_LEVEL=debug

# API Configuration
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100

# Email Service (Resend)
RESEND_API_KEY=re_your_api_key_here
