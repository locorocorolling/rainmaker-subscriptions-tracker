{
  "name": "backend",
  "version": "1.0.0",
  "description": "Subscription Tracker Backend API",
  "type": "module",
  "packageManager": "pnpm@10.7.0",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc --build && tsc-esm-fix --target=dist",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@types/node-cron": "^3.0.11",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.7.12",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "helmet": "^7.1.0",
    "joi": "^17.13.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.4.4",
    "node-cron": "^4.2.1",
    "redis": "^4.6.13",
    "resend": "^6.1.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.9",
    "@types/react": "^19.1.13",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "@vitest/ui": "^3.2.4",
    "c8": "^10.1.3",
    "eslint": "^8.57.0",
    "mongodb-memory-server": "^10.2.1",
    "supertest": "^7.1.4",
    "tsc-esm-fix": "^3.1.2",
    "tsx": "^4.15.7",
    "typescript": "^5.5.2",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@scarf/scarf",
      "mongodb-memory-server",
      "msgpackr-extract"
    ]
  },
  "engines": {
    "node": ">=22.0.0"
  }
}